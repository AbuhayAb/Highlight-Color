{
  "manifest_version": 2,
  "name": "HighlightColor",
  "description": "Highlight color",
  "version": "0.0.1",
  "homepage_url": "https://github.com/chuck26/Highlight-Color",
  "icons": {
    "64": "icons/icons8-marker-pen-64.png"
  },
    "browser_action": {
    "default_title": "Color picker",
    "default_popup": "switcher.html",
    "browser_style": true,
    "default_icon": {
        "128": "icons/icons8-marker-pen-64.png"
    }
  },
  "content_scripts": [
    {
		"matches": ["<all_urls>"],
      	"js": ["content_script.js"]
    }
  ]
}
